{
  "manifest_version": 3,
  "name": "Quick QR",
  "version": "1.0.0",
  "description": "現在開いているページのURLをQRコードで表示。スマホでその場ですぐ開ける。",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Quick QR - このページをQRで開く"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ]
}
